{
    "name": "needtodl",
    "version": "1.0.0",
    "description": "An app for downloading music from different websites using different NPM packages",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "author": "",
    "license": "AGPL-3.0-or-later",
    "dependencies": {
        "express": "^4.17.1",
        "fluent-ffmpeg": "^2.1.2",
        "fs": "0.0.1-security",
        "horizon-youtube-mp3": "^1.9.2",
        "http": "0.0.0",
        "mkdirp": "^0.5.1",
        "os": "^0.1.1",
        "path": "^0.12.7",
        "soundcloud-dl": "^1.0.3",
        "video-url-link": "^0.1.4",
        "ytdl-core": "^0.29.5"
    },
    "build": {
        "productName": "PVM Player",
        "appId": "scripter.PVMplayer",
        "win": {
            "target": [
                "portable"
            ]
        },
        "portable": {
            "artifactName": "needtodl.exe"
        }
    },
    "devDependencies": {
        "electron": "^6.0.5",
        "electron-builder": "^21.2.0"
    }
}
